<Page x:Class="FlatDesignApp.Pages.EditPages.BankEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlatDesignApp.Pages.EditPages"
      mc:Ignorable="d" 
      xmlns:elements="clr-namespace:FlatDesignApp.Elements"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Edit Category" x:Name="eBankPage" Style="{StaticResource EditPageStyle}">
    
    <Grid>
        <StackPanel>
            <elements:PlaceholderTextBox x:Name="tbBankName" Title="Bank name" Text="{Binding ElementName=eBankPage, Path=EditBank.Name}"/>
            <Button Click="SaveButtonClick"/>
            <Button Style="{StaticResource EditPageCancelButton}" Click="CancelButtonClick"/>
        </StackPanel>
    </Grid>
</Page>